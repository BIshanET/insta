enum PostType {
  INDEPENDENT
  GROUPED
}

enum PostStatus {
  DRAFT
  PUBLISHED
  SCHEDULED
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  postsGrooup     PostGroup[]
  postItems  PostItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  password  String?
}

model PostGroup {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  userId         String        @db.ObjectId
  user           User          @relation(fields: [userId], references: [id])
  status         PostStatus    @default(DRAFT)
  title          String?
  description    String?
  postItems      PostItem[]
  imageUrl String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model PostItem {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  parentPostId  String?    @db.ObjectId
  parentPost    PostGroup?      @relation(fields: [parentPostId], references: [id])
  imageUrl      String?    // Either uploaded directly or generated from a template
  caption       String?
  order         Int?
  type           PostType
  userId       String
  user    User @relation(fields: [userId] , references: [id])
  status PostStatus @default(DRAFT)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

}

enum templateType {
  Post
  PostGroup
}

enum contentType {
  Reel
  Post
  Story
}

model Template {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  html        String               // Base Handlebars HTML template
  variables   Json                 // Array of variable definitions, e.g. [{key:"title",label:"Title"}]
  thumbnail   String?              // Optional preview of the template
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  type templateType @default(Post)
  contentType contentType @default(Post)
}

model SystemConfig {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String @unique
  value String
  updatedAt DateTime @updatedAt
}

